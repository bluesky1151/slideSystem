<!DOCTYPE html>
<html>
    <head>
        <title><%= title%></title>
        <link rel="stylesheet" type="text/css" href="//jupiter.tntetsu-lab.cs.kanagawa-it.ac.jp/slidesystem/stylesheets/shower.css">
        <script src="//jupiter.tntetsu-lab.cs.kanagawa-it.ac.jp/slidesystem/socket.io/socket.io.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
        <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css">
        <link rel="stylesheet" href="//jupiter.tntetsu-lab.cs.kanagawa-it.ac.jp/slidesystem/stylesheets/highlight/a11y-dark.css">
        <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/10.1.1/highlight.min.js"></script>
        <script src="//jupiter.tntetsu-lab.cs.kanagawa-it.ac.jp/slidesystem/javascripts/pdf.js"></script>
        <script>
            //受け渡し
            let url = location.protocol + "//jupiter.tntetsu-lab.cs.kanagawa-it.ac.jp/slidesystem<%= url%>";
            let sesId = "<%= sesId%>";
            let viewDoc_text = "<%- viewDoc%>";
            let uid = "<%- uData.id%>";
        </script>
        <script src="//jupiter.tntetsu-lab.cs.kanagawa-it.ac.jp/slidesystem/javascripts/shower.js"></script>
        <link rel="shortcut icon" href="//jupiter.tntetsu-lab.cs.kanagawa-it.ac.jp/slidesystem/images/favicon.ico" />
    </head>
    <body>
        <!--公開者側画面-->
        <div class="line0">
            <!--ヘッダー-->
            <h1><%= title%></h1>
            <span><a href="../../" class="link-button">戻る</a></span>
        </div>
        <div class="line1">
            <div class="Slide">
                <canvas id="the-canvas" style="border:1px solid black;"></canvas>
            </div>
            <div class="SourceViewer">
                <pre class="sorce" style="text-align: left;"><code id="Sorce" ></code></pre><br>
                <textarea id="Sorce2" style="display: none;"></textarea>
                <button class="link-button" id="clipBoard" onclick="copyToClipboard()">クリップボードにコピー</button>
            </div>
            <div class="joiner">
                <!--参加者一覧-->
                <h1>参加中<button class="link-button" onclick="reloadViewer()">&#x1f504;</button></h1>
                <hr>
                <table border="1" id="joining">
                </table>
            </div>
        </div>
        <div class="ProgressLine"><progress id="pageProgress" value="1"></progress></div>
        <div class="line2">
            <!--操作ボタン-->
            <p>
                <span id="Changebutton"><button class="link-button" onclick="pageChange(1)">◀</button><button class="link-button" onclick="pageChange(2)">▶</button></span>
                <span id="nowPage"></span> / <span id="maxPage"></span>
                <button class="link-button" onclick="reloadPDF()">スライドの更新</button>
                <span id="timerField" style="display: none;">経過時間: <span id="time"></span></span>
            </p>
        </div>
        <div class="line3">
            <div class="consoleBox">
                <!--コンソール-->
                <p>コンソールボックス</p>
                <div class="consoleBox2">
                    <!--内容-->
                    <button class="link-button" id="toOnline" onclick="Toonline()">セッション開催</button>
                    <button class="link-button" id="StartExe" onclick="StartExe()">演習開始</button><br>
                    <p>タイマー</p>
                    <button class="link-button" id="timerSwitch" onclick="timerToggler(1)">スタート</button>
                    <button class="link-button" id="timerReset" onclick="timerResetFunc()">リセット</button>
                </div>
            </div>
            <div class="document">
                <p>関連資料</p>
                <p id="viewDoc"></p>
                <p><a target="blank" href="//jupiter.tntetsu-lab.cs.kanagawa-it.ac.jp/slidesystem<%= url%>" title="ダウンロード">PDFのダウンロード</a></p>
            </div>
        </div>
    </body>
</html>